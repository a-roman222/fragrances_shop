<%= content_for :title, 'Fragrances' %>

<!-- Page Header -->
<section class="hero is-link is-small">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">Pure Scent Fragrances</h1>
      <p class="subtitle">Dare to be Different</p>
    </div>
  </div>
</section>

<!-- Inline Search Form -->
<div class="section">
  <%= search_form_for @q, url: fragrances_path, method: :get, html: { class: 'form-inline' } do |f| %>
    
    <!-- Name Search Field -->
    <div class="field" style="margin-right: 10px;">
      <div class="control">
        <%= f.label :name_cont, "Name", class: "label" %>
        <%= f.search_field :name_cont, placeholder: "Enter fragrance name...", class: "input is-small" %>
      </div>
    </div>

    <!-- Brand Dropdown -->
    <div class="field" style="margin-right: 10px;">
      <div class="control">
        <%= f.label :brand_id_eq, "Brand", class: "label" %>
        <%= f.select :brand_id_eq, options_from_collection_for_select(@brands, :id, :name, params.dig(:q, :brand_id_eq)), include_blank: "Select a Brand", class: "input is-small" %>
      </div>
    </div>

    <!-- Gropu Dropdown -->
    <div class="field" style="margin-right: 10px;">
      <div class="control">
        <%= f.label :group_id_eq, "Group", class: "label" %>
        <%= f.select :group_id_eq, options_from_collection_for_select(@groups, :id, :name, params.dig(:q, :group_id_eq)), include_blank: "Select a Group", class: "input is-small" %>
      </div>
    </div>

    <!-- Gropu Dropdown -->
    <div class="field" style="margin-right: 10px;">
      <div class="control">
        <%= f.label :genre_id_eq, "Genre", class: "label" %>
        <%= f.select :genre_id_eq, options_from_collection_for_select(@genres, :id, :name, params.dig(:q, :genre_id_eq)), include_blank: "Select a Genre", class: "input is-small" %>
      </div>
    </div>



    <!-- Submit Button -->
    <div class="field">
      <div class="control">
        <%= f.submit "Search", class: "button is-link is-small" %>
      </div>
    </div>

  <% end %>
</div>



<!-- Pagination Controls -->
<%= paginate @fragrances %>

<!-- Product Cards -->
<div class="columns is-multiline is-mobile">
  <% @fragrances.each do |fragrance| %>
    <div class="column is-12-mobile is-6-tablet is-4-desktop">
      <div class="card">
        <!-- Image Section -->
        <div class="card-image">
          <figure class="image">
            <img src="<%= fragrance.url_img %>" alt="<%= fragrance.name %>">
          </figure>
        </div>

        <!-- Card Content -->
        <div class="card-content">
          <div class="media">
            <div class="media-content">
              <!-- Fragrance Name -->
              <p class="title is-5"><%= fragrance.name %></p>
              <!-- Price -->
              <p class="subtitle is-6">$<%= fragrance.price %></p>
            </div>
          </div>

          <div class="content">
            <%= link_to 'View Details', fragrance_path(fragrance), class: 'button is-link is-fullwidth' %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<!-- Pagination Controls Again -->
<%= paginate @fragrances %>
